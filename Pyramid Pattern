#include <iostream>
using namespace std;
int main() {
    int n;
    cout<<"Enter number :";
    cin>>n;
    for(int i=0;i<n;i++) {
        for(int j=0;j<n-i-1;j++) {     //spaces:n-i-1
            cout<<" ";
        }
        for(int j=1;j<=i+1;j++) {     //nums1
            cout<<j;
        } 
        for(int j=i;j>0;j--) {       // nums2:
            cout<<j;
        }
        cout<<endl;
    }
    return 0;
}
